<p>
  <h2>
    <%= link_to post.title, post %>
    
    <div class="pull-right">
      <3
    </div>
    
  </h2>
</p>

<p>
  <% if post.kind == 'image' %>
    Show the image...
    
    <%= image_tag post.content, class: 'img img-responsive' %>
    
  <%else %>
    <%= simple_format post.content %>
  <% end %>
</p>

<p class="text-muted">
  <small>
    Posted on <%= post.created_at.to_formatted_s(:long) %>
  </small>
  
  <small class="pull-right">
    <%= post.hearts.count %> hearts
  </small>
</p>